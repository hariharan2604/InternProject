doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Register
        link(href="/stylesheets/reg-update.css", rel="stylesheet", type="text/css")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Montserrat&family=Open+Sans:wght@600&display=swap", rel="stylesheet")
    body
        .container
            .register-box
                h1.form-header Register
                form#regform(action="/register", method="post", enctype="multipart/form-data", autocomplete="off")
                    .form-row
                        .form-group
                            label(for="userName") Username
                            input.form-input(name="userName", type="text")
                        .form-group
                            label(for="email") Email
                            input.form-input(name="email", type="email")
                    .form-row
                        .form-group
                            label(for="password") Password
                            input.form-input(required, name="password", type="password")
                        .form-group
                            label(for="mobileNumber") Mobile
                            input.form-input(name="mobileNumber", type="number")
                    .form-row
                        .form-group
                            label(for="employeeName") Name
                            input.form-input(name="employeeName", type="text")
                        .form-group
                            label(for="age") Age
                            input.form-input(name="age", type="number")
                    .form-row
                        .form-group
                            label(for="gender") Gender
                            select.form-select(name="gender")
                                option(value="Male") Male
                                option(value="Female") Female
                        .form-group
                            label(for="designation") Designation
                            input.form-input(name="designation", type="text")
                    .form-row
                        .form-group
                            label(for="maritalStatus") Marital Status
                            select.form-select(name="maritalStatus")
                                option(value="Single") Single
                                option(value="Married") Married
                        .form-group
                            label(for="branch") Branch
                            select.form-select(name="branch")
                                option(value="Mylapore") Mylapore
                                option(value="T Nagar") T Nagar
                                option(value="Alwarpet") Alwarpet
                    .form-row
                        .form-group
                            label.upload-label(for="image") Profile Image
                            .file-input-container
                                label.file-input-label(for="image-upload")
                                    span.upload-icon +
                                    span Choose Image
                                input.file-input(type="file", id="image-upload", name="image", accept="image/*")
                        .form-group
                            label(for="isAdmin") Admin:
                            .radio-options
                                label.radio-option
                                    input.radio-input(type="radio", name="isAdmin", value="1")
                                    | Yes
                                label.radio-option
                                    input.radio-input(type="radio", name="isAdmin", value="0", checked)
                                    | No
                    .button-container
                        input.signin-button(type="submit", value="Signup")
                    p.error-message #{message}
